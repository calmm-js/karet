{
  "parser": "babel-eslint",
  "extends": "eslint:recommended",
  "plugins": [ "babel", "react" ],
  "rules": {
    "arrow-parens": [2, "as-needed"],
    "no-console": 0,
    "no-const-assign": 2,
    "no-unneeded-ternary": 2,
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
    "no-var": 2,
    "prefer-arrow-callback": 2,
    "prefer-const": 2,
    "react/jsx-uses-react": 1,
    "react/jsx-uses-vars": 1,
    "semi": [2, "never"]
  },
  "globals": {
    "process": true
  }
}
